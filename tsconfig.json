{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"declaration": true,

		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,

		"pretty": true,
		"sourceMap": true,
		"removeComments": true,

		"baseUrl": "./src",
		"rootDir": "./src",
		"sourceRoot": "./src",
		"outDir": "./dist",
		"declarationDir": "./dist",

    "lib": [
      "dom",
      "es6"
    ],
    "types": [
			"webpack",
			"node"
		]
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		".vscode",
		"config",
		"coverage",
		"node_modules",
		"dist",
		"**/*.spec.ts"
	]
}